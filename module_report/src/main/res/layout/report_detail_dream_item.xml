<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              xmlns:tools="http://schemas.android.com/tools"
              android:gravity="center_vertical"
              android:paddingLeft="16dp"
              android:paddingTop="10dp"
              android:paddingRight="16dp"
              android:paddingBottom="10dp">

    <TextView
        android:id="@+id/tv_dream_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="02:30"
        android:textColor="@color/report_detail_item_time_color"
        android:textSize="@dimen/dp_16" />

    <ImageView
        android:id="@+id/iv_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:src="@drawable/music_play_status_anim_list" />

    <TextView
        android:id="@+id/tv_during"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="right|center_vertical"
        android:text="12"
        android:textColor="@color/report_detail_item_during_color"
        tools:textSize="@dimen/dp_16" />
</LinearLayout>
