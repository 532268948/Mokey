<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@color/music_before_item_bg"
    android:gravity="center_vertical"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <RelativeLayout
        android:layout_width="60dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_music_number"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/music_before_item_number_normal_color"
            android:textSize="16dp"
            tools:text="1"/>

        <ImageView
            android:id="@+id/iv_listening"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@drawable/music_play_status_anim_list"
            android:visibility="gone"
            tools:visibility="visible"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_music_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:textColor="@color/music_before_item_name_normal_color"
        android:textSize="16dp"
        tools:text="减少痛苦，天然的麻醉剂"/>

    <ImageView
        android:id="@+id/iv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:scaleType="centerInside"
        android:src="@drawable/item_music_play"/>
</LinearLayout>

