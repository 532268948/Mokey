<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">@dimen/dp_30</item>
    </style>

    <style name="dialogAnim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/common_default_dialog_push_in</item>
        <item name="android:windowExitAnimation">@anim/common_default_dialog_push_out</item>
    </style>

</resources>