<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="com.example.module_habit">

    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>

    <application>
        <activity
            android:name=".ui.prepare.PrepareActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ui.sleep.SleepActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ui.alarm.AlarmActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustResize"/>

        <receiver android:name=".broadcast.AlarmBroadcast">
            <intent-filter>
                <action android:name="com.example.alarm.clock"/>
            </intent-filter>
        </receiver>
        <receiver android:name=".broadcast.UnLockReceiver">
            <intent-filter>
                <action android:name="android.intent.action.USER_PRESENT"/>
            </intent-filter>
        </receiver>

        <activity
            android:name=".ui.notify.AlarmNotifyActivity"
            android:excludeFromRecents="true"
            android:launchMode="singleInstance"
            android:screenOrientation="portrait"
            android:taskAffinity=""
            android:theme="@android:style/Theme.Wallpaper.NoTitleBar">
        </activity>
        <activity android:name=".ui.alarm.SmallSleepActivity">
        </activity>
    </application>

</manifest>