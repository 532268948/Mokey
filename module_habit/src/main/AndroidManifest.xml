<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.module_habit">

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <application>
        <activity
            android:name=".ui.prepare.PrepareActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.sleep.SleepActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.alarm.AlarmActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <receiver android:name=".broadcast.AlarmBroadcast">
            <intent-filter>
                <action android:name="com.example.alarm.clock"/>
            </intent-filter>
        </receiver>

        <receiver android:name="com.example.module_habit.broadcast.UnLockReceiver">
            <intent-filter>
                <action android:name="android.intent.action.USER_PRESENT" />
            </intent-filter>
        </receiver>
    </application>

</manifest>