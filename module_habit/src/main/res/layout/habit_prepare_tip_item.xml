<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="30dp"
    android:layout_marginTop="20dp"
    android:layout_marginRight="30dp"
    android:layout_marginBottom="20dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:src="@drawable/habit_prepare_tip_1" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:textColor="@color/prepare_tip_name"
            android:textSize="14dp"
            tools:text="@string/prepare_tip_name_1" />

        <TextView
            android:id="@+id/tv_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/prepare_short_tip"
            android:textSize="11dp"
            tools:text="@string/prepare_short_tip_1" />
    </LinearLayout>

    <CheckBox
        android:id="@+id/cb_select"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/habit_prepare_tip_selector"
        android:button="@null"
        android:gravity="center"
        android:checked="false"
        android:textSize="14sp"
        android:textColor="@color/habit_prepare_item_select_color"
        tools:text="1" />
</LinearLayout>
