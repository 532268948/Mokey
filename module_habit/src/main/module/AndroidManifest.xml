<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.module_habit">

    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>

    <application
        android:name=".app.MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/main_tab_btn_habit_pressed"
        android:label="@string/app_name"
        android:roundIcon="@drawable/main_tab_btn_habit_pressed"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".container.ContainerActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.prepare.PrepareActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.sleep.SleepActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.alarm.AlarmActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustResize"/>
        <receiver android:name=".broadcast.AlarmBroadcast">
            <intent-filter>
                <action android:name="com.example.alarm.clock"/>
            </intent-filter>
        </receiver>
        <receiver android:name="com.example.module_habit.broadcast.UnLockReceiver">
            <intent-filter>
                <action android:name="android.intent.action.USER_PRESENT" />
            </intent-filter>
        </receiver>

        <activity android:name=".ui.notify.AlarmNotifyActivity"
                  android:screenOrientation="portrait"
                  android:excludeFromRecents="true"
                  android:launchMode="singleInstance"
                  android:taskAffinity=""
                  android:theme="@android:style/Theme.Wallpaper.NoTitleBar">

        </activity>
    </application>

</manifest>